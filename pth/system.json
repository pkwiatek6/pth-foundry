{
    "id": "pth",
    "title": "Princess the Hopeful: Vocation Edition",
    "description": "A port of the Princess the Hopeful: Vocation Edition TTRPG to foundry",
    "version": "1.0.0",
    "compatability": {
        "minimum": 12,
        "verified": 12
    },
    "authors": [{
        "name":"Peter Kwiatek",
        "url" : "",
        "email": "",
        "discord": ""
    }],
    "esmodules": ["pth.mjs"],
    "styles": ["styles/system-styles.css"],
    "packs": [{
        "name": "charms",
        "label": "Charms",
        "system":"pth",
        "type": "Item",
        "path": "packs/charms.db"
    }],
    "languages": [{
        "lang": "en",
        "name": "English",
        "path": "lang/en.json"
    }],
