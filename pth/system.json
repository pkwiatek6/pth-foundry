{
    "id": "pth",
    "title": "Princess the Hopeful: Vocation Edition",
    "description": "A port of the Princess the Hopeful: Vocation Edition TTRPG to foundry",
    "version": "1.0.0",
    "compatibility": {
        "minimum": 12
    },
    "authors": [
        {
            "name": "Peter Kwiatek",
            "url": "",
            "email": "",
            "discord": ""
        }
    ],
    "esmodules": [
        "module/pth.mjs"
    ],
    "styles": [
        "styles/system-styles.css"
    ],
    "packs": [
        {
            "name": "charms",
            "label": "Charms",
            "system": "pth",
            "type": "Item",
            "path": "packs/charms.db"
        }
    ],
    "languages": [
        {
            "lang": "en",
